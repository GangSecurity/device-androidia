<?xml version="1.0" encoding="UTF-8"?>
<SystemClass xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Schemas/SystemClass.xsd" Name="Route">

    <Subsystem
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:xi="http://www.w3.org/2001/XInclude"
        xsi:noNamespaceSchemaLocation="../../Schemas/Subsystem.xsd"
        Name="route_mgr" Type="ROUTEMGR">

        <ComponentLibrary>
            <!-- Common Criteria defintion -->
            <xi:include href="RouteSubsystem-CommonCriteria.xml"/>

            <!-- Common Route Types defintion -->
            <xi:include href="RouteSubsystem-RoutesTypes.xml"/>

            <ComponentType Name="PlatformRoutes">
                <Component Name="media" Type="StreamRouteFullDuplex" Mapping="Card:@SOUND_CARD_NAME@,Amend1:Media,Device:0,Ports:"/>
                <Component Name="voice" Type="StreamRouteFullDuplex" Mapping="Card:@SOUND_CARD_NAME@,Amend1:Voice,Device:4,Ports:"/>
                <Component Name="deep_media" Type="StreamRoutePlayback" Mapping="Card:@SOUND_CARD_NAME@,Amend1:DeepMedia,Device:2,Ports:"/>
                <Component Name="low_latency" Type="StreamRouteFullDuplex" Mapping="Card:@SOUND_CARD_NAME@,Amend1:LowLatency,Device:3,Ports:"/>
                <Component Name="compressed_media" Type="RoutePlayback" Mapping="Card:@SOUND_CARD_NAME@,Amend1:CompressedMedia,Ports:"/>
                <Component Name="modem_ia" Type="RouteFullDuplex" Mapping="Card:@SOUND_CARD_NAME@,Amend1:ModemIA,Ports:"/>
                <Component Name="bt_ia" Type="RouteFullDuplex" Mapping="Card:@SOUND_CARD_NAME@,Amend1:BtIA,Ports:Bt_Port"/>
                <Component Name="fm_ia" Type="RouteCapture" Mapping="Card:@SOUND_CARD_NAME@,Amend1:FMIA,Ports:FM_Port"/>
                <Component Name="hwcodec0_ia" Type="RouteFullDuplex" Mapping="Card:@SOUND_CARD_NAME@,Amend1:HwCodec0IA,Ports:"/>
                <Component Name="hwcodec1_ia" Type="RoutePlayback" Mapping="Card:@SOUND_CARD_NAME@,Amend1:HwCodec1IA,Ports:"/>
                <Component Name="dmic_ia" Type="RouteCapture" Mapping="Card:@SOUND_CARD_NAME@,Amend1:DMicIA,Ports:"/>
                <Component Name="idisp" Type="StreamRoutePlayback" Mapping="Card:@SOUND_CARD_NAME@,Amend1:iDisp,Device:6,Ports:"/>
                <Component Name="a2dp_offload_ia" Type="RoutePlayback" Mapping="Card:@SOUND_CARD_NAME@,Amend1:A2dpOffloadIA,Ports:"/>
                <Component Name="always_listening" Type="RouteCapture" Mapping="Card:@SOUND_CARD_NAME@,Amend1:AlwaysListening,Device:2,Ports:"/>
                <Component Name="context_awareness" Type="RouteCapture" Mapping="Card:@SOUND_CARD_NAME@,Amend1:ContextAwareness,Ports:"/>
            </ComponentType>

            <ComponentType Name="PlatformPorts">
                <Component Name="FM" Type="Port" Mapping="Amend1:FM,Groups:Group0"/>
                <Component Name="BT" Type="Port" Mapping="Amend1:Bt,Groups:Group0"/>
            </ComponentType>

            <ComponentType Name="PlatformCriteria">
                <Component Name="mode" Type="Mode" Mapping="Name:Mode"/>
                <Component Name="input_devices" Type="InputDevices" Mapping="Name:SelectedInputDevices"/>
                <Component Name="band_type" Type="Band" Mapping="Name:BandType"/>
            </ComponentType>

        </ComponentLibrary>

        <InstanceDefinition>
            <Component Name="ports" Type="PlatformPorts"/>
            <Component Name="routes" Type="PlatformRoutes"/>
            <Component Name="criteria" Type="PlatformCriteria"/>
        </InstanceDefinition>
    </Subsystem>

    <SubsystemInclude Path="DebugFsSubsystem.xml"/>

</SystemClass>
