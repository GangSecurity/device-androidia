<?xml version="1.0" encoding="UTF-8"?>
<SystemClass xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Schemas/SystemClass.xsd" Name="Route">

    <Subsystem
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:xi="http://www.w3.org/2001/XInclude"
        xsi:noNamespaceSchemaLocation="../../Schemas/Subsystem.xsd"
        Name="route_mgr" Type="ROUTEMGR">

        <ComponentLibrary>
            <!-- Common Criteria defintion -->
            <xi:include href="RouteSubsystem-CommonCriteria.xml"/>

            <!-- Common Route Types defintion -->
            <xi:include href="RouteSubsystem-RoutesTypes.xml"/>

            <ComponentType Name="PlatformRoutes">
                <Component Name="media" Type="StreamRoutePlayback" Mapping="Card:@SOUND_CARD_NAME@,Amend1:Media,Device:0,Ports:"/>
                <Component Name="voice" Type="StreamRouteCapture" Mapping="Card:@SOUND_CARD_NAME@,Amend1:Voice,Device:1,Ports:"/>
                <Component Name="lowlatency" Type="StreamRouteCapture" Mapping="Card:@SOUND_CARD_NAME@,Amend1:LowLatency,Device:1,Ports:"/>
                <Component Name="deep_media" Type="StreamRoutePlayback" Mapping="Card:@SOUND_CARD_NAME@,Amend1:DeepMedia,Device:2,Ports:"/>
                <Component Name="bt_hfp" Type="RouteFullDuplex" Mapping="Amend1:BtHfp,Ports:"/>
                <Component Name="eavb_stream" Type="RouteFullDuplex" Mapping="Amend1:EavbStream,Ports:"/>
                <Component Name="eavb_media" Type="StreamRoutePlayback" Mapping="DeviceAddress:BUS00_MEDIA,Card:smartx:media_stream,Amend1:EavbMedia,Device:0,Ports:"/>
                <Component Name="eavb_navigation" Type="StreamRoutePlayback" Mapping="DeviceAddress:BUS01_NAVIGATION,Card:smartx:navigation_stream,Amend1:EavbNavigation,Device:0,Ports:"/>
                <Component Name="eavb_hmi" Type="StreamRoutePlayback" Mapping="DeviceAddress:BUS02_HMI,Card:smartx:hmi_stream,Amend1:EavbHmi,Device:0,Ports:"/>
                <Component Name="aux_stream" Type="RouteCapture" Mapping="Amend1:AuxStream,Ports:"/>
                <Component Name="eavb_mic_pair_1" Type="StreamRouteCapture" Mapping="DeviceAddress:BUS00_MIC1,Card:smartx:record_mic_1_2,Amend1:EavbMicPair1,Device:0,Ports:"/>
                <Component Name="eavb_mic_pair_2" Type="StreamRouteCapture" Mapping="DeviceAddress:BUS01_MIC2,Card:smartx:record_mic_1_2,Amend1:EavbMicPair2,Device:0,Ports:"/>
                <Component Name="fm_ia" Type="RouteCapture" Mapping="Amend1:FMIA,Ports:"/>
                <Component Name="modem_ia" Type="RouteFullDuplex" Mapping="Amend1:ModemIA,Ports:"/>
            </ComponentType>

            <ComponentType Name="PlatformCriteria">
                <Component Name="mode" Type="Mode" Mapping="Name:Mode"/>
                <Component Name="input_devices" Type="InputDevices" Mapping="Name:SelectedInputDevices"/>
                <Component Name="band_type" Type="Band" Mapping="Name:BandType"/>
            </ComponentType>

        </ComponentLibrary>

        <InstanceDefinition>
            <Component Name="routes" Type="PlatformRoutes"/>
            <Component Name="criteria" Type="PlatformCriteria"/>
        </InstanceDefinition>
    </Subsystem>

    <SubsystemInclude Path="DebugFsSubsystem.xml"/>

</SystemClass>
