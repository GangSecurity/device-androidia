<?xml version="1.0" encoding="UTF-8"?>
<ComponentLibrary xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../Schemas/ComponentLibrary.xsd">
    <ComponentTypeSet>

    <ComponentType Name="RoutingZoneAudioPorts">

      <!-- Eavb eavb_media routing zone ports -->
      <Component Name="eavb_media_rz_port" Type="AudioRzInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb eavb_navigation routing zone ports -->
      <Component Name="eavb_navigation_rz_port" Type="AudioRzInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb eavb_hmi routing zone ports -->
      <Component Name="eavb_hmi_rz_port" Type="AudioRzInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb mic pair 1 routing zone ports -->
      <Component Name="eavb_mic1_rz_port" Type="AudioRzInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb mic pair 2 routing zone ports -->
      <Component Name="eavb_mic2_rz_port" Type="AudioRzInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb MC 1 routing zone ports OMITTED VOLUNTARILY -->

      <!-- BT HFP routing zone ports -->
      <Component Name="bt_hfp_out_8k_rz_port" Type="AudioRzInputPort"
                 Mapping="Channels:1,Index:0"/>
      <Component Name="bt_hfp_out_16k_rz_port" Type="AudioRzInputPort"
                 Mapping="Channels:1,Index:0"/>
      <!-- AMP routing zone ports -->
      <Component Name="media_amp_rz_port" Type="AudioRzInputPort"
                 Mapping="Channels:2,Index:0"/>
      <Component Name="navigation_amp_rz_port" Type="AudioRzInputPort"
                 Mapping="Channels:2,Index:0"/>
      <Component Name="hmi_amp_rz_port" Type="AudioRzInputPort"
                 Mapping="Channels:2,Index:0"/>

      <!-- Modem routing zone ports -->
      <Component Name="modem_out_rz_port" Type="AudioRzInputPort"
                 Mapping="Channels:1,Index:0"/>
    </ComponentType>

    <ComponentType Name="RoutingZones">
      <!-- AMP routing zone -->
      <Component Name="amp_rz" Type="RoutingZone"
                 Mapping="Sink:amp_sink,PortPinLinks:media_amp_rz_port->pipe_media_in|navigation_amp_rz_port->pipe_navigation_in|hmi_amp_rz_port->pipe_hmi_in,PinPortLinks:pipe_out->amp_sink_port,PipelineName:amp_pipe"/>

      <!-- BT HFP routing zone -->
      <Component Name="bt_hfp_out_8k_rz" Type="RoutingZone"
                 Mapping="Sink:bt_hfp_out:8000,Links:bt_hfp_out_8k_rz_port->bt_hfp_out_8k_port"/>
      <Component Name="bt_hfp_out_16k_rz" Type="RoutingZone"
                 Mapping="Sink:bt_hfp_out:16000,Links:bt_hfp_out_16k_rz_port->bt_hfp_out_16k_port"/>
      <Component Name="modem_out_rz" Type="RoutingZone"
                 Mapping="Sink:modem_out,Links:modem_out_rz_port->modem_out_port"/>

      <!-- Eavb mic pair 1 routing zone -->
      <Component Name="eavb_mic1_rz" Type="RoutingZone"
                 Mapping="Sink:avb:eavb_mic_pair1,Links:eavb_mic1_rz_port->eavb_mic1_sink_port"/>
      <!-- Eavb mic pair 2 routing zone -->
      <Component Name="eavb_mic2_rz" Type="RoutingZone"
                 Mapping="Sink:avb:eavb_mic_pair2,Links:eavb_mic2_rz_port->eavb_mic2_sink_port"/>
    </ComponentType>

    <ComponentType Name="DerivedRoutingZones">
      <!-- Eavb eavb_media routing zone -->
      <Component Name="eavb_media_rz" Type="DerivedRoutingZone"
                 Mapping="Sink:avb:eavb_media,Links:eavb_media_rz_port->eavb_media_sink_port,DerivateFrom:amp_rz"/>

      <!-- Eavb eavb_navigation routing zone -->
      <Component Name="eavb_navigation_rz" Type="DerivedRoutingZone"
                 Mapping="Sink:avb:eavb_navigation,Links:eavb_navigation_rz_port->eavb_navigation_sink_port,DerivateFrom:amp_rz"/>
      <!-- Eavb eavb_hmi routing zone -->
      <Component Name="eavb_hmi_rz" Type="DerivedRoutingZone"
                 Mapping="Sink:avb:eavb_hmi,Links:eavb_hmi_rz_port->eavb_hmi_sink_port,DerivateFrom:amp_rz"/>
      <!-- MC 1 RZ omitted voluntarily as only for test purpose until now -->
    </ComponentType>

    </ComponentTypeSet>
</ComponentLibrary>
