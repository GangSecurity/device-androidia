{{#enable_hw_sec}}
on post-fs-data
    mkdir /data/vendor/securestorage 0700 system system
    chmod 666 /dev/rpmb0

{{#enable_storage_proxyd}}
service storageproxyd /system/vendor/bin/intelstorageproxyd -d /dev/trusty-ipc-dev0 -p /data/vendor/securestorage -r /dev/rpmb0
    class late_start
    user system
    group system
{{/enable_storage_proxyd}}
{{/enable_hw_sec}}

on post-fs
    wait_for_prop modules.trusty.ready true
    # Update device node r/w attribute
    chmod 666 /dev/trusty-ipc-dev0
