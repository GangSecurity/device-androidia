    $(LOCAL_PATH)/{{_extra_dir}}/audio_policy_criteria{{policy_suffix}}.conf:vendor/etc/audio_policy_criteria.conf \
    $(LOCAL_PATH)/{{_extra_dir}}/audio_effects{{policy_suffix}}.xml:vendor/etc/audio_effects.xml \
    $(LOCAL_PATH)/{{_extra_dir}}/route_criteria.conf:vendor/etc/route_criteria.conf \
    $(LOCAL_PATH)/{{_extra_dir}}/early_audio_alsa.sh:vendor/bin/early_audio_alsa.sh \
    $(LOCAL_PATH)/{{_extra_dir}}/early_audio_alsa_avb.sh:vendor/bin/early_audio_alsa_avb.sh \
