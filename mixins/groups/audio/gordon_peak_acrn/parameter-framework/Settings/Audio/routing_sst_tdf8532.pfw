domainGroup: VoiceVolumeGroup
	domain: VoiceVolumeDomain
		conf: Default
			/Audio/CONFIGURATION/VOICE_VOLUME_CTRL_PARAMETER = /Audio/sst/main_mixer/voice_volume


domainGroup: RampType&Duration
	domain: Dirana_RampHandler_Domain
		conf: Default
			/Audio/sst/main_mixer/dirana_in_ramp_duration = 9000000
			/Audio/sst/main_mixer/dirana_in_ramp_type/mode = curve2
			/Audio/sst/main_mixer/dirana_aux_in_ramp_duration = 8000000
			/Audio/sst/main_mixer/dirana_aux_in_ramp_type/mode = curve2
			/Audio/sst/main_mixer/dirana_tuner_in_ramp_duration = 8000000
			/Audio/sst/main_mixer/dirana_tuner_in_ramp_type/mode = curve2


domainGroup: Routing.Sst.Enable

	#########################################
	############### Enable ###############
	#########################################

	RoutageState Includes Path

	domainGroup: Playback

		domain: Regular
			conf: Bind
				ANY
					OpenedPlaybackRoutes Includes EavbMedia
					OpenedPlaybackRoutes Includes EavbNavigation
					OpenedPlaybackRoutes Includes EavbHmi
					OpenedPlaybackRoutes Includes BtHfp
					OpenedCaptureRoutes Includes FMIA
					OpenedPlaybackRoutes Includes ModemIA
					OpenedPlaybackRoutes Includes Media
					OpenedCaptureRoutes Includes EavbStream
					OpenedCaptureRoutes Includes AuxStream

				/Audio/sst/main_mixer/ihf/mix/pcm_regular = 1

			conf: Unbind
				/Audio/sst/main_mixer/ihf/mix/pcm_regular = 0

		domain: Speaker
			conf: Bind
				ANY
					OpenedPlaybackRoutes Includes EavbMedia
					OpenedPlaybackRoutes Includes EavbNavigation
					OpenedPlaybackRoutes Includes EavbHmi
					OpenedCaptureRoutes Includes BtHfp
					OpenedCaptureRoutes Includes AuxStream
					OpenedCaptureRoutes Includes FMIA
					OpenedPlaybackRoutes Includes ModemIA
					OpenedPlaybackRoutes Includes Media
					OpenedCaptureRoutes Includes EavbStream

				/Audio/sst/main_mixer/ihf_switch = 1

			conf: Unbind
				/Audio/sst/main_mixer/ihf_switch = 0

		domain: Modem
			conf: Bind
				OpenedPlaybackRoutes Includes ModemIA

				/Audio/sst/main_mixer/modem/mix/media3 = 1

			conf: Unbind
				/Audio/sst/main_mixer/modem/mix/media3 = 0

	domainGroup: Capture

		domain: Modem
			conf: Bind
				OpenedCaptureRoutes Includes ModemIA
				MicMuted Is False

				/Audio/sst/main_mixer/media2/mix/modem = 1

			conf: Unbind
				/Audio/sst/main_mixer/media2/mix/modem = 0

	domainGroup: Duplex

		domain: BT_HFP
			conf: Bind_WB
				HfpClientBandType Is WB

				/Audio/sst/main_mixer/bt_hfp_in/mode = wide-band
				/Audio/sst/main_mixer/bt_hfp_out/mode = wide-band

			conf: Bind_NB
				HfpClientBandType Is NB

				/Audio/sst/main_mixer/bt_hfp_in/mode = narrow-band
				/Audio/sst/main_mixer/bt_hfp_out/mode = narrow-band
