<?xml version="1.0" encoding="UTF-8"?>
<Subsystem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xsi:noNamespaceSchemaLocation="Schemas/Subsystem.xsd"
           Name="avb" Type="AVB_CONTROL">
  <ComponentLibrary>

    <xi:include href="eAVB/AVB/AvbControlSubsystem-Definitions.xml"/>
    <xi:include href="eAVB/AVB/NetworkAudioStreams-@AVB_PROFILE@.xml"/>
    <xi:include href="eAVB/Common/LocalAudioStreams-@AVB_PROFILE@.xml"/>

    <ComponentType Name="LocalAudioStreams">
      <Component Name="to_network" Type="LocalAudioStreamsToNetwork"/>
      <Component Name="from_network" Type="LocalAudioStreamsFromNetwork"/>
    </ComponentType>

    <ComponentType Name="NetworkAudioStreams">
      <Component Name="rx" Type="AvbReceiveStreams"/>
      <Component Name="tx" Type="AvbTransmitStreams"/>
      </ComponentType>
  </ComponentLibrary>

  <InstanceDefinition>
    <Component Name="network_audio_streams" Type="NetworkAudioStreams"/>
    <Component Name="local_audio_streams" Type="LocalAudioStreams"/>
  </InstanceDefinition>
</Subsystem>
