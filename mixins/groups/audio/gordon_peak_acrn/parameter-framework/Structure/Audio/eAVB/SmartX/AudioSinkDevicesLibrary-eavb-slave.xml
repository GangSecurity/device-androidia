<?xml version="1.0" encoding="UTF-8"?>
<ComponentLibrary xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../Schemas/ComponentLibrary.xsd">
    <ComponentTypeSet>
    <!-- ** Audio Sink Devices ** -->
    <ComponentType Name="AudioSinkDevices">
      <!-- HAL streams devices-->
      <Component Name="record_mic_1_2" Type="AudioSinkDevice"
                 Mapping="Ports:record_sink_port,Channels:2,SampleRate:48000,Format:eIasFormatInt16,ClockType:eIasClockProvided,PeriodSize:960,Periods:4"/>
      <!-- Alsa devices-->
      <Component Name="amp_sink" Type="AudioSinkDevice"
                 Mapping="Device:hw={CARD sklvirtiocard DEV 0},Ports:amp_sink_port,Channels:4,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:1152,Periods:2"/>
      <Component Name="bt_hfp_out:8000" Type="AudioSinkDevice"
                 Mapping="Ports:bt_hfp_out_8k_port,Channels:1,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:1152,Periods:5"/>
      <Component Name="bt_hfp_out:16000" Type="AudioSinkDevice"
                 Mapping="Ports:bt_hfp_out_16k_port,Channels:1,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:1152,Periods:5"/>
      <Component Name="modem_out" Type="AudioSinkDevice"
                 Mapping="Ports:modem_out_port,Channels:1,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:1152,Periods:4"/>
    </ComponentType>

    <!-- ** Audio Sink Ports ** -->
    <ComponentType Name="AudioSinkPorts">

      <!-- Eavb eavb_media port-->
      <Component Name="eavb_media_sink_port" Type="AudioSinkInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb eavb_navigation port-->
      <Component Name="eavb_navigation_sink_port" Type="AudioSinkInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb eavb_hmi port-->
      <Component Name="eavb_hmi_sink_port" Type="AudioSinkInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb mic pair1 port-->
      <Component Name="eavb_mic1_sink_port" Type="AudioSinkInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb mic pair 2 port-->
      <Component Name="eavb_mic2_sink_port" Type="AudioSinkInputPort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb MC 1 port-->
      <Component Name="eavb_mc_1_sink_port" Type="AudioSinkInputPort" Mapping="Channels:6,Index:0"/>

      <!-- Record sink ports -->
      <Component Name="record_sink_port" Type="AudioSinkInputPort"
                 Mapping="Channels:2,Index:0"/>
      <!-- AMP sink ports -->
      <Component Name="amp_sink_port" Type="AudioSinkInputPort"
                 Mapping="Channels:4,Index:0"/>
      <!-- BT HFP sink ports -->
      <Component Name="bt_hfp_out_8k_port" Type="AudioSinkInputPort"
                 Mapping="Channels:1,Index:0"/>
      <Component Name="bt_hfp_out_16k_port" Type="AudioSinkInputPort"
                 Mapping="Channels:1,Index:0"/>
      <Component Name="modem_out_port" Type="AudioSinkInputPort"
                 Mapping="Channels:1,Index:0"/>
    </ComponentType>

    </ComponentTypeSet>
</ComponentLibrary>
