<?xml version="1.0" encoding="UTF-8"?>
<ComponentLibrary xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../Schemas/ComponentLibrary.xsd">
    <ComponentTypeSet>
    <!-- ** Audio Sink Devices ** -->
    <ComponentType Name="AudioSinkDevices">
      <!-- Alsa devices-->
      <Component Name="amp_sink" Type="AudioSinkDevice"
                 Mapping="Ports:amp_sink_port,Channels:4,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:192,Periods:4"/>
      <Component Name="bt_hfp_out:8000" Type="AudioSinkDevice"
                 Mapping="Ports:bt_hfp_out_8k_port,Channels:1,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:192,Periods:5"/>
      <Component Name="bt_hfp_out:16000" Type="AudioSinkDevice"
                 Mapping="Ports:bt_hfp_out_16k_port,Channels:1,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:192,Periods:5"/>
      <Component Name="modem_out" Type="AudioSinkDevice"
                 Mapping="Ports:modem_out_port,Channels:1,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:1152,Periods:4"/>
    </ComponentType>

    <!-- ** Audio Sink Ports ** -->
    <ComponentType Name="AudioSinkPorts">
      <!-- AMP sink ports -->
      <Component Name="amp_sink_port" Type="AudioSinkInputPort"
                 Mapping="Channels:4,Index:0"/>
      <!-- BT HFP sink ports -->
      <Component Name="bt_hfp_out_8k_port" Type="AudioSinkInputPort"
                 Mapping="Channels:1,Index:0"/>
      <Component Name="bt_hfp_out_16k_port" Type="AudioSinkInputPort"
                 Mapping="Channels:1,Index:0"/>
      <Component Name="modem_out_port" Type="AudioSinkInputPort"
                 Mapping="Channels:1,Index:0"/>
    </ComponentType>

    </ComponentTypeSet>
</ComponentLibrary>
