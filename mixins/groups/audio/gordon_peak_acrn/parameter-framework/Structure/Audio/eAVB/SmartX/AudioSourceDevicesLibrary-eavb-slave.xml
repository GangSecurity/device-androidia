<?xml version="1.0" encoding="UTF-8"?>
<ComponentLibrary xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../Schemas/ComponentLibrary.xsd">
    <ComponentTypeSet>
    <!-- ** Audio Source Devices ** -->
    <ComponentType Name="AudioSourceDevices">
      <!-- HAL streams devices-->
      <Component Name="media_stream" Type="AudioSourceDevice"
                 Mapping="Ports:media_stream_port,Channels:2,SampleRate:48000,Format:eIasFormatInt16,ClockType:eIasClockProvided,PeriodSize:192,Periods:2"/>
      <Component Name="navigation_stream" Type="AudioSourceDevice"
                 Mapping="Ports:navigation_stream_port,Channels:2,SampleRate:48000,Format:eIasFormatInt16,ClockType:eIasClockProvided,PeriodSize:192,Periods:2"/>
      <Component Name="hmi_stream" Type="AudioSourceDevice"
                 Mapping="Ports:hmi_stream_port,Channels:2,SampleRate:48000,Format:eIasFormatInt16,ClockType:eIasClockProvided,PeriodSize:192,Periods:2"/>
      <!-- Alsa devices-->
      <Component Name="aux_in" Type="AudioSourceDevice"
                 Mapping="Device:hw={CARD broxtontdf8532 DEV 20},Ports:aux_in_port,Channels:2,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:192,Periods:12"/>
      <Component Name="mic" Type="AudioSourceDevice"
                  Mapping="Device:hw={CARD broxtontdf8532 DEV 11},Ports:mic_port,Channels:1,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:192,Periods:5"/>
      <Component Name="modem_in" Type="AudioSourceDevice"
                 Mapping="Ports:modem_in_port,Channels:2,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:192,Periods:12"/>
      <Component Name="tuner" Type="AudioSourceDevice"
                 Mapping="Device:hw={CARD broxtontdf8532 DEV 21},Ports:tuner_port,Channels:2,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:192,Periods:12"/>
      <!--
      TODO: BT HFP IN devices are temporary stereo for compability with map_2ch_4ch device.
      It should be changed when pipeline mechanism is implemented.
      -->
      <Component Name="bt_hfp_in:8000" Type="AudioSourceDevice"
                 Mapping="Ports:bt_hfp_in_8k_port,Channels:2,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:384,Periods:12"/>
      <Component Name="bt_hfp_in:16000" Type="AudioSourceDevice"
                 Mapping="Ports:bt_hfp_in_16k_port,Channels:2,SampleRate:48000,Format:eIasFormatInt32,ClockType:eIasClockReceived,PeriodSize:384,Periods:12"/>
    </ComponentType>

    <!-- ** Audio Source Ports ** -->
    <ComponentType Name="AudioSourcePorts">
      <!-- Media stream ports -->
      <Component Name="media_stream_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>
      <!-- Navigation stream ports -->
      <Component Name="navigation_stream_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>
      <!-- HMI stream ports -->
      <Component Name="hmi_stream_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>

      <!-- Eavb media port -->
      <Component Name="eavb_media_source_port" Type="AudioSourcePort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb navigation port -->
      <Component Name="eavb_navigation_source_port" Type="AudioSourcePort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb hmi port -->
      <Component Name="eavb_hmi_source_port" Type="AudioSourcePort" Mapping="Channels:2,Index:0"/>
      <!-- Eavb MC 1 source port -->
      <Component Name="eavb_mc_1_source_port" Type="AudioSourcePort" Mapping="Channels:6,Index:0"/>

      <!-- AUX IN ports -->
      <Component Name="aux_in_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>
      <!-- MIC source ports -->
      <Component Name="mic_port" Type="AudioSourcePort"
                 Mapping="Channels:1,Index:0"/>
      <!-- BT HFP source ports -->
      <Component Name="bt_hfp_in_8k_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>
      <Component Name="bt_hfp_in_16k_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>
      <!-- Modem IN ports -->
      <Component Name="modem_in_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>
      <!-- Radio Tuner ports -->
      <Component Name="tuner_port" Type="AudioSourcePort"
                 Mapping="Channels:2,Index:0"/>
    </ComponentType>

    </ComponentTypeSet>
</ComponentLibrary>
