<?xml version="1.0" encoding="UTF-8"?>
<ComponentTypeSet xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:noNamespaceSchemaLocation="../../../../../Schemas/ComponentTypeSet.xsd">
  <ComponentLibrary>
        <!-- Algorithms common definitions -->
        <xi:include href="intel/CommonAlgoTypes.xml"/>
        <!-- Common algorithms -->
        <xi:include href="cavs/cavs-Gain.xml"/>

        <!-- SBA algorithms definitions -->
        <xi:include href="cavs/cavs-Dcr.xml"/>
        <xi:include href="cavs/cavs-Fir.xml"/>
        <xi:include href="cavs/cavs-Iir.xml"/>
        <xi:include href="cavs/cavs-Mdrc.xml"/>
        <xi:include href="cavs/cavs-Equalizers.xml"/>
        <xi:include href="cavs/cavs-Lpro.xml"/>
        <!-- WOV GHWD algorithms -->
        <xi:include href="cavs/cavs-Ghwd.xml"/>

  </ComponentLibrary>

     <!-- Mixers definition -->
    <ComponentType Name="MainMixerIn">
        <!-- Top mixers -->
        <BooleanParameter Name="pcm_regular" Mapping="Control:%1 media2_in mi Switch"/>
        <BooleanParameter Name="pcm_deep" Mapping="Control:%1 media3_in mi Switch"/>
        <BooleanParameter Name="pcm_fast" Mapping="Control:%1 media4_in mi Switch"/>
        <BooleanParameter Name="rx_speech" Mapping="Control:%1 speech_in mi Switch"/>

        <!-- Bottom mixers -->
        <BooleanParameter Name="efx_loop0" Mapping="Control:%1 efx_loop0 mi Switch"/>
        <BooleanParameter Name="efx_loop3" Mapping="Control:%1 efx_loop3 mi Switch"/>
        <BooleanParameter Name="mic_eq_l1" Mapping="Control:%1 efx_l1_in mi Switch"/>
        <BooleanParameter Name="codec_amic" Mapping="Control:%1 codec0_in mi Switch"/>
        <BooleanParameter Name="soc_media_dmic01" Mapping="Control:%1 dmic01_hifi_in mi Switch"/>
        <BooleanParameter Name="soc_media_dmic23" Mapping="Control:%1 dmic23_hifi_in mi Switch"/>
        <BooleanParameter Name="bt" Mapping="Control:%1 bt_in mi Switch"/>
        <BooleanParameter Name="modem0" Mapping="Control:%1 modem0_in mi Switch"/>
        <BooleanParameter Name="aware_in" Mapping="Control:%1 aware_in mi Switch"/>
    </ComponentType>

    <ComponentType Name="MainMixerOut">
        <Component Name="mix" Type="MainMixerIn"/>
    </ComponentType>

    <!-- Main Mixer -->
    <ComponentType Name="MainMixerMatrix">
        <!-- Top mixers -->
        <Component Name="pcm0" Type="MainMixerOut" Mapping="Amend1:media0_out mo"/>
        <Component Name="pcm2" Type="MainMixerOut" Mapping="Amend1:media2_out mo"/>
        <Component Name="hf_sns2" Type="MainMixerOut" Mapping="Amend1:hf_sns2_out mo"/>

        <!-- Bottom mixers -->
        <Component Name="efx_loop0" Type="MainMixerOut" Mapping="Amend1:efx_loop0 mo"/>
        <Component Name="efx_loop3" Type="MainMixerOut" Mapping="Amend1:efx_loop3 mo"/>
        <Component Name="mic_eq_loop" Type="MainMixerOut" Mapping="Amend1:efx_l1_out mo"/>
        <Component Name="idisp" Type="MainMixerOut" Mapping="Amend1:idisp_out mo"/>
        <Component Name="ihf_or_earpiece" Type="MainMixerOut" Mapping="Amend1:codec1_out mo"/>
        <Component Name="headset" Type="MainMixerOut" Mapping="Amend1:codec0_out mo"/>
        <Component Name="bt" Type="MainMixerOut" Mapping="Amend1:bt_out mo"/>
        <Component Name="modem0" Type="MainMixerOut" Mapping="Amend1:modem0_out mo"/>
        <Component Name="modem1" Type="MainMixerOut" Mapping="Amend1:modem1_out mo"/>
        <Component Name="aware_out" Type="MainMixerOut" Mapping="Amend1:aware_out mo"/>
    </ComponentType>

    <ComponentType Name="gain_effect">
                <Component Name="gain" Type="Gain" Mapping="Amend2:gain"/>
    </ComponentType>

    <ComponentType Name="dcr_effect" Extends="gain_effect" >
                <Component Name="dcr"  Type="Dcr"  Mapping="ByteControlWithLength:%1 dcr"/>
    </ComponentType>

     <ComponentType Name="media_effect1" Extends="gain_effect" >
                <Component Name="fir"  Type="Fir" Mapping="ByteControl:%1 fir 0 fir params"/>
                <Component Name="iir"  Type="Iir"  Mapping="ByteControl:%1 iir 0 iir params"/>
     </ComponentType>

     <ComponentType Name="media_effect0" >
                <Component Name="equalizer" Type="media_effect1" />
                <Component Name="mdrc" Type="Mdrc" Mapping="ByteControl:%1 mdrc 0 mdrc params"/>
     </ComponentType>

     <ComponentType Name="media_effect3">
                <Component Name="lpro" Type="LproCavs" Mapping="ByteControl:%1 lpro 0 config params"/>
     </ComponentType>

    <!-- Pipe instances definitions -->
        <ComponentType Name="Pipes">
            <ParameterBlock Name="codec_out">
                <Component Name="ihf_or_earpiece" Type="gain_effect" Mapping="Amend1:codec0_out"/>
                <Component Name="headset" Type="gain_effect" Mapping="Amend1:codec1_out"/>
            </ParameterBlock>
            <ParameterBlock Name="codec_in">
                <Component Name="dmics" Type="dcr_effect" Mapping="Amend1:codec0_in"/>
                <Component Name="amic" Type="dcr_effect" Mapping="Amend1:codec1_in"/>
            </ParameterBlock>
             <ParameterBlock Name="dmic_hifi">
                <Component Name="dmic_01" Type="dcr_effect" Mapping="Amend1:dmic01_hifi_in"/>
                <Component Name="dmic_23" Type="dcr_effect" Mapping="Amend1:dmic23_hifi_in"/>
            </ParameterBlock>

             <Component  Name="efx_loop0" Type="media_effect0"  Mapping="Amend1:efx_loop0" />
             <Component  Name="efx_loop1" Type="media_effect1"  Mapping="Amend1:efx_l1_out" />
             <Component  Name="efx_loop3" Type="media_effect3"  Mapping="Amend1:efx_loop3" />

            <ParameterBlock Name="media">
                <Component Name="media0_out" Type="gain_effect" Mapping="Amend1:media0_out"/>
                <Component Name="media1_out" Type="gain_effect" Mapping="Amend1:media1_out"/>
                <Component Name="media1_in" Type="gain_effect" Mapping="Amend1:media1_in"/>
                <Component Name="media2_out" Type="gain_effect" Mapping="Amend1:media2_out"/>
                <Component Name="media2_in" Type="gain_effect" Mapping="Amend1:media2_in"/>
                <Component Name="media3_in" Type="gain_effect" Mapping="Amend1:media3_in"/>
            </ParameterBlock>
             <Component Name="hwd" Type="GhwdParams" Mapping="Amend1:hwd_in"/>
    </ComponentType>

    <!-- Sample Spec Domain -->
    <ComponentType Name="SampleSpecDomain">
        <EnumParameter Name="mode" Size="8" Mapping="Control:%1">
            <ValuePair Literal="a2dp" Numerical="0"/>
            <ValuePair Literal="wide-band" Numerical="1"/>
            <ValuePair Literal="narrow-band" Numerical="2"/>
        </EnumParameter>
    </ComponentType>

    <ComponentType Name="SampleSpecDomains">
        <Component Name="bt_rx" Type="SampleSpecDomain" Mapping="Amend1:Dummy Capture-ssp1 Rx"/>
        <Component Name="bt_tx" Type="SampleSpecDomain" Mapping="Amend1:ssp1 Tx-Dummy Playback"/>
    </ComponentType>
</ComponentTypeSet>
